  100 Sub gpibcom local errhan1,abrt,comerr,whoami$,getslave,testdone,setup,pickunit,port$,e,sel$,x$  110   !  120   ! ***************************  130   ! * GPIB COMMUNICATION TEST *  140   ! ***************************  150   !  160   ! Initialization  170   !  180     Disable abort  190     Dim sel$ to 260,x$ to 7  200     Sel$=ask$("select")  210     Getmem buffer sel$ dels "(":x$  220     If len(x$)<>0 then x$=x$&":"  230     Select "gpib:"  240     Disable srq  250     Dim whoami$ to 1  260     Integer e  270     Dim port$ to 256  280   !  290   ! Get GPIB parameters so they can be restored at test exit  300   !  310     Open #99:"gpib:"  320     Port$=ask$("lu",99)  330     Close 99  340     On abort then gosub abrt  350     Enable abort  360     On error(812) then gosub errhan1  370     Print "GPIB CONVERSATION"  380     If not(proced("INSTALL GPIB CABLE.")) then goto testdone  390 Pickunit:   !  400     Print "SLAVE MUST BE STARTED FIRST^G"  410     Input prompt "MASTER(0)/SLAVE(1)?":whoami$  420     If whoami$="1" or whoami$="0" then goto setup  430     Goto pickunit  440 Setup:   ! SLAVE must be running before MASTER  450     If whoami$="1" then goto getslave  460   !  470     Append "master"  480   !  490   ! Start conversation  500   !  510     Open #2:"frtp(view=2):"  520     Print #2:"MASTER CALLING"  530     If not(master("MASTER CALLING")) then goto comerr  540     Print #2:"CONFIRMED"  550     If not(master("TRANSACTION DONE")) then goto comerr  560     Print #2:"MASTER COMPLETE"  570     Goto testdone  580   !  590   ! Error and abort handlers  600   !  610 Abrt:   !  620     Print "TEST ABORTED"  630     Branch testdone  640 Comerr:   !  650     Print "COMMUNICATION BREAKDOWN"  660     Goto testdone  670 Errhan1:   !  680     Print "NO LISTENER ON BUS"  690     Branch testdone  700   !  710 Getslave:   !  720     Append "slave"  730     E=proced("INSTALL SYSVER IN MASTER.")  740     Call slave  750   !  760 Testdone:   !  770     Close all  780     If whoami$="0" then delete line master else delete line slave  790     Set driver port$ ! Restore GPIB parameters  800     Print #"frtp:":  810     Print "CONVERSATION EXIT"  820     If x$="" then x$="GPIB:"  830     Select x$  840     Return  850     End